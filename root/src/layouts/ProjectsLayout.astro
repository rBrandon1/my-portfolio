---
export interface ProjDetails {
  imgAlt: string;
  imgSrc: string;
  btnName: string;
  btnLink: string;

  showBtn: boolean;
}

const { imgAlt, imgSrc, btnName, btnLink, showBtn = true } = Astro.props;
---

<div class="pt-4 pb-4">
  <img class="rounded-lg" alt={imgAlt} src={imgSrc} />
  <div class="max-w-[660px] mx-auto pt-4 pb-4">
    <div class="text-2xl md:text-3xl font-bold"><slot name="name" /></div>
    <div class="[color:#ccc] pt-2 pb-2"><slot name="description" /></div>
    {
      showBtn ? (
        <button class="border-red-400 border rounded-2xl pt-1 pr-4 pl-4 pb-1 hover:ring-2 hover:ring-red-400 ease-in-out duration-200">
          <a target="_blank" rel="noreferrer" class="pb-4" href={btnLink}>
            <div class="flex gap-2">
              <span>{btnName}</span>
              <img src="/img/external-link.svg" alt="link" />
            </div>
          </a>
        </button>
      ) : (
        <div />
      )
    }
  </div>
</div>
