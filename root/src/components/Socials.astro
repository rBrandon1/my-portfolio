---
export interface SocialDetails {
  link: string;
  alt: string;
  src: string;
}

const { link, alt, src } = Astro.props;
---

<a href={link} target="_blank" rel="noreferrer">
  <li
    class="hover:bg-red-500 hover:rounded-md w-[40px] h-[40px] flex items-center justify-center"
  >
    <img alt={alt} src={src} />
  </li>
</a>
